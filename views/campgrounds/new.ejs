<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width:30%; margin: 30px auto">
            <form action='/campgrounds' method='POST'>
                <div class="form-group">
                    <input class="form-control" type='text' name="campground[name]" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type='number' name="campground[price]" placeholder="price" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' name="campground[img]" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' name="campground[description]" placeholder="description"></input>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type='submit'></input>
                </div>
            </form>
            <a href='/campgrounds'>Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>