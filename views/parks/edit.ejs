<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= park.name %></h1>
        <div style="width:30%; margin: 30px auto">
            <form action='/parks/<%= park._id %>/?_method=PUT' method='POST'>
                <div class="form-group">
                    <input class="form-control" type='text' name="park[name]" value= "<%= park.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type='number' name="park[price]" value= "<%= park.price %>" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' name="park[img]" value= "<%= park.img %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' name="park[description]" value= "<%= park.description %>"></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= park.location %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type='submit'></input>
                </div>
            </form>
            <a href='/parks'>Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>