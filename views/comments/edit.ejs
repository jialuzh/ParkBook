<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit comment</h1>
        <div style="width:30%; margin: 30px auto">
            <form action='/parks/<%= park_id %>/comments/<%= comment._id %>/?_method=PUT' method='POST'>
                <div class="form-group">
                    <input class="form-control" type='text' name="comment[text]" value="<%= comment.text %>"></input>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type='submit'></input>
                </div>
            </form>
            <a href='/parks'>Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>